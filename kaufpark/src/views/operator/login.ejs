<%- include('../partials/layout', { body: `
  <section class=\"kp-card\">
    <h1 class=\"kp-title\">Operador - Iniciar sesión</h1>
    ${error ? `<div class=\"kp-error\">${error}</div>` : ''}
    <form method=\"POST\" action=\"/operator/login\" class=\"kp-form\">
      <label>Usuario</label>
      <input name=\"username\" required />
      <label>Contraseña</label>
      <input name=\"password\" type=\"password\" required />
      <button class=\"kp-btn kp-btn-primary\">Entrar</button>
    </form>
  </section>
` }) %>

